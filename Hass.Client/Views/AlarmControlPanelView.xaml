<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hass.Client.Views.AlarmControlPanelView"
             xmlns:controls="clr-namespace:Hass.Client.Views.Controls"
             xmlns:converters="clr-namespace:Hass.Client.Views.Converters"
             xmlns:behaviors="clr-namespace:Hass.Client.Views.Behaviors"
             xmlns:components="clr-namespace:Hass.Client.Models.Components">

    <ContentView.Content>
        <controls:KeyPadView x:Name="alarmPanel" 
                                HeaderText="{Binding Title}" 
                                Code="{Binding Code}"
                                Command1="{Binding ArmHomeCommand}"
                                Command2="{Binding ArmAwayCommand}"
                                WidthRequest="300" 
                                MinimumHeightRequest="300" 
                                HorizontalOptions="Center" 
                                VerticalOptions="Center"/>
  </ContentView.Content>
</ContentView>